<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity">

    <include
        android:id="@+id/map_toolbar"
        layout="@layout/app_bar_layout"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-70dp" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:minWidth="0dp"
        app:adSize="SMART_BANNER"
        app:adUnitId="@string/admob_banner_ad"
        app:layout_constraintBottom_toTopOf="@+id/map_mapFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/map_toolbar"></com.google.android.gms.ads.AdView>


    <com.google.android.gms.ads.formats.UnifiedNativeAdView
        android:id="@+id/unifiedNativeAdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.google.android.gms.ads.formats.UnifiedNativeAdView>


    <!--<Spinner-->
    <!--android:id="@+id/spinner"-->
    <!--android:layout_width="395dp"-->
    <!--android:layout_height="37dp"-->
    <!--android:layout_marginStart="8dp"-->
    <!--android:layout_marginLeft="8dp"-->
    <!--android:layout_marginTop="8dp"-->
    <!--android:layout_marginEnd="8dp"-->
    <!--android:layout_marginRight="8dp"-->
    <!--app:layout_constraintEnd_toEndOf="parent"-->
    <!--app:layout_constraintStart_toStartOf="parent"-->
    <!--app:layout_constraintTop_toBottomOf="@+id/map_toolbar"-->
    <!--app:layout_constraintVertical_weight="1" />-->

    <Button
        android:id="@+id/map_safe_btn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/safe_btn_txt"
        android:theme="@style/AppTheme.ButtonSafe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/map_unsafe_btn"
        app:layout_constraintTop_toBottomOf="@+id/map_mapFragment"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/map_unsafe_btn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="@string/unsafe_btn_txt"
        android:theme="@style/AppTheme.ButtonUnsafe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/map_safe_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map_mapFragment"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/map_chat_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chat"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/map_mapFragment"
        app:layout_constraintEnd_toStartOf="@+id/map_mapFragment"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toEndOf="@+id/map_mapFragment"
        app:layout_constraintTop_toBottomOf="@+id/map_mapFragment"
        app:layout_constraintVertical_bias="0.107" />

    <fragment
        android:id="@+id/map_mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cameraZoom="10"
        app:layout_constraintBottom_toTopOf="@id/map_safe_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adView"
        tools:context=".MapActivity" />

    <TextView
        android:id="@+id/map_current_geostate"
        android:layout_width="372dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="current geo state"
        android:textColor="@color/quantum_black_100"
        android:textSize="0sp"
        app:layout_constraintBottom_toTopOf="@+id/map_mapFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map_toolbar"
        tools:visibility="gone" />

    <Button
        android:id="@+id/add_geo_fences_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="add geofences"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/map_chat_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map_toolbar"
        app:layout_constraintVertical_bias="0.22" />

    <TextView
        android:id="@+id/map_station_name_textview"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="nom du station"
        android:textColor="@color/quantum_black_100"
        android:textSize="25sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/map_mapFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map_toolbar" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="map_unsafe_btn,map_safe_btn"
        tools:layout_editor_absoluteY="731dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:layout_constraintBottom_toBottomOf="@+id/map_mapFragment"
        app:layout_constraintEnd_toEndOf="@+id/map_toolbar"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="@+id/map_toolbar"
        app:layout_constraintTop_toBottomOf="@+id/adView"
        app:layout_constraintVertical_bias="0.94"
        app:srcCompat="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>