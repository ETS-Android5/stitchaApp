<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Launcher">
    <item name="android:windowBackground">@drawable/launch_screen</item>
    <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
    <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

    <style name="AppTheme.ButtonSafe" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#1F9E1F</item>
        <item name="android:textColor">@color/quantum_white_text</item>
    </style>

    <style name="AppTheme.ButtonUnsafe" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#A80C0C</item>
        <item name="android:textColor">@color/quantum_white_text</item>
    </style>

</resources>
